+			/* Beaglebone black has it soldered on */
+			 slot@100 {
+			 	ti,cape-override;
+				priority = <1>;
+			 	compatible = "ti,beaglebone-black";
+			 	board-name = "Bone-LT-eMMC-2G";
+			 	version = "00A0";
+			 	manufacturer = "Texas Instruments";
+			 	part-number = "BB-BONE-EMMC-2G";
